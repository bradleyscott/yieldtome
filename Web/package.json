  "license": "MIT",
  "private": true,
  "devDependencies": {
    "karma": "^0.12.x",
    "protractor": "^1.6.x",
    "http-server": "^0.7.x",
    "bower": "^1.3.x",
    "shelljs": "^0.2.x",
    "karma-ng-html2js-preprocessor": "^0.1.x",
    "grunt-contrib-uglify": "^0.5.x",
